                       wrapText="true">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0"/>
                    </padding>
                </Label>
                <TextField fx:id="isUserInDanger" editable="false" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                    </HBox.margin>
                </TextField>
            </HBox>
