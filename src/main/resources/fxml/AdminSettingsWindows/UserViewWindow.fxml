<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="543.0" prefWidth="886.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.eaclient.Controllers.AdminController.UserViewController">
   <VBox alignment="TOP_CENTER" layoutY="-1.6" prefHeight="549.0" prefWidth="300.0"
         style="-fx-background-color: #aed2ca;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
         AnchorPane.topAnchor="0.0">
      <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
             style="-fx-background-color: #1e2f56;" text="Добавление нового пользователя:" textFill="WHITE">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </padding>
         <font>
            <Font name="Arial Bold" size="16.0"/>
         </font>
      </Label>
      <VBox prefHeight="38.0" prefWidth="274.0"/>
      <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Введите Логин"
             textFill="#1e2f56">
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
         </padding>
         <font>
            <Font name="Arial Bold" size="14.0"/>
         </font>
      </Label>
      <TextField fx:id="loginField" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                 prefHeight="30.0" promptText="Логин">
         <VBox.margin>
            <Insets left="10.0" right="10.0"/>
         </VBox.margin>
      </TextField>
      <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Введите пароль"
             textFill="#1e2f56">
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
         </padding>
         <font>
            <Font name="Arial Bold" size="14.0"/>
         </font>
      </Label>
      <PasswordField fx:id="passwordField" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                     prefHeight="30.0" promptText="Пароль">
         <VBox.margin>
            <Insets left="10.0" right="10.0"/>
         </VBox.margin>
      </PasswordField>
      <RadioButton fx:id="radIsAdmin" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                   mnemonicParsing="false" text="Является администратором" textFill="#1e2f56">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </padding>
         <font>
            <Font name="Arial Bold" size="14.0"/>
         </font>
      </RadioButton>
      <Button fx:id="btnAddUser" mnemonicParsing="false" onAction="#addNewUser" prefHeight="33.0" prefWidth="262.0"
              style="-fx-background-color: white;" text="Добавить пользователя" textFill="#1e2f56">
         <font>
            <Font name="Arial Bold" size="14.0"/>
         </font>
         <VBox.margin>
            <Insets bottom="10.0"/>
         </VBox.margin>
      </Button>
      <Separator prefHeight="33.0" prefWidth="300.0"/>
      <TextField fx:id="chosenProfile" editable="false" maxWidth="1.7976931348623157E308" prefHeight="30.0"
                 promptText="Ничего не выбрано">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0"/>
         </VBox.margin>
      </TextField>
      <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#deleteUser" prefHeight="34.0" prefWidth="273.0"
              style="-fx-background-color: white;" text="Удалить выбранного пользователя" textFill="#1e2f56">
         <font>
            <Font name="Arial Bold" size="14.0"/>
         </font>
      </Button>
   </VBox>
   <VBox layoutX="312.8" layoutY="6.4" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
         prefHeight="537.0" prefWidth="572.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="313.0"
         AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <Label maxWidth="1.7976931348623157E308" prefHeight="81.0" prefWidth="558.0"
             text="Выберите поле из таблицы и новый статус пользователя для изменения статуса" wrapText="true">
         <font>
            <Font name="Arial" size="16.0"/>
         </font>
         <padding>
            <Insets left="10.0" right="10.0"/>
         </padding>
      </Label>
      <HBox alignment="CENTER" prefHeight="26.0" prefWidth="434.0">
         <ChoiceBox fx:id="choiceBoxStatus" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                    prefHeight="30.0" prefWidth="109.0" HBox.hgrow="ALWAYS">
            <HBox.margin>
               <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
            </HBox.margin>
         </ChoiceBox>
         <Button fx:id="btnChangeStatus" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                 mnemonicParsing="false" onAction="#changeUserStatus" prefHeight="26.0" prefWidth="148.0"
                 text="Изменить статус пользователя" HBox.hgrow="ALWAYS">
            <font>
               <Font name="Arial" size="12.0"/>
            </font>
            <HBox.margin>
               <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
            </HBox.margin>
         </Button>
      </HBox>
      <TableView fx:id="systUserTable" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                 prefHeight="447.0" prefWidth="558.0" stylesheets="@../../css/TableStyle.css">
         <columns>
            <TableColumn fx:id="id_syst" prefWidth="75.0" text="ID"/>
            <TableColumn fx:id="login_syst" prefWidth="75.0" text="Логин"/>
            <TableColumn fx:id="status_syst" prefWidth="75.0" text="Статус"/>
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
         </columnResizePolicy>
      </TableView>
   </VBox>
</AnchorPane>
